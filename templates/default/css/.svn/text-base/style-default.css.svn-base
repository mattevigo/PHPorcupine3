@CHARSET "UTF-8";

body
{
	background-color: black;
	margin: 0;
}

.cleared
{
	float: none;
	clear: both;
	margin: 0;
	padding: 0;
	border: none;
	font-size:1px;
}

.border-test
{
	border-style: solid;
	border-width: 1px;
	border-color: white;
}

.border-test-bottom
{
	border-bottom-style: solid;
	border-bottom-color: white;
	border-bottom-width: 1px;
}


#header-background
{
	height: 160px;
	margin-top: 0px;

	border-bottom-style: solid;
	border-bottom-color: white;
	border-bottom-width: 1px;
	background-image: url('../images/crynewmusic/top.png');
}

#logo-container
{
	height: 221px;
/*
	border-style: dotted;
	border-width: 1px;
	border-color: white;
*/
	position: absolute;
	top: 25px;
	width: 100%;
}

#logo
{
	width: 925px; /* 924px */
	background-image: url('../images/crynewmusic/logo.png');
	height: 218px;
	margin-left: auto;
	margin-right: auto;
}

#container
{
	/*
border-style: dotted;
	border-width: 1px;
	border-color: white;
*/
}

#header-reference
{
	height: 30px;
	position: absolute;
	background-color: black;
	opacity: 0.5;
	filter:alpha(opacity=50); /* IE */
	width: 100%;
	left: 0px;
	top: 0px;
	border-bottom-style: solid;
	border-bottom-width: 1px;
	border-bottom-color: white;
}

#thumbs-container
{
	position: absolute;
	padding-top: 3px;
	padding-left: 5px;
}

.thumb
{
	width: 24px;
	height: 24px;
	opacity: 0.7;
	filter:alpha(opacity=70); /* IE */
}

.thumb:hover
{
	opacity: 1;
	filter:alpha(opacity=100); /* IE */
}

